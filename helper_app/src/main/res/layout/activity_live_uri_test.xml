<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    tools:context="top.xxx.helper_app.LiveUriTestActivity">

    <com.pili.pldroid.player.widget.PLVideoView
        android:id="@+id/uriTestVideoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></com.pili.pldroid.player.widget.PLVideoView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/liveUri"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_weight="3"
            android:background="@color/white"
            android:hint="请输入 uri"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/liveUriTestBtn"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="测试"/>
    </LinearLayout>

</RelativeLayout>